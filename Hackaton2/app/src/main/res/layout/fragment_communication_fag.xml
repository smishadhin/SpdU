<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shovan21.hackaton.Communication_fag">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_alignParentTop="true"
            android:queryHint="School ID" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewSchool"
            android:layout_below="@+id/searchView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/buttonOkSearch"
            android:layout_alignBottom="@+id/searchView"
            android:layout_toRightOf="@+id/searchView"
            android:layout_toEndOf="@+id/searchView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewTeacher1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="2dp"
            android:id="@+id/textViewCall1"
            android:layout_below="@+id/textViewTeacher1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="2dp"
            android:id="@+id/textViewSMS1"
            android:layout_below="@+id/textViewTeacher1"
            android:layout_toRightOf="@+id/textViewCall1"
            android:layout_toEndOf="@+id/textViewCall1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="2dp"
            android:id="@+id/textViewInfo1"
            android:layout_alignTop="@+id/textViewSMS1"
            android:layout_toRightOf="@+id/textViewSMS1"
            android:layout_toEndOf="@+id/textViewSMS1" />

    </RelativeLayout>
</FrameLayout>

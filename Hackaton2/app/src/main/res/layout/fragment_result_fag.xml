<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shovan21.hackaton.Result_fag">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextResultId"
            android:hint="ID"
            android:layout_above="@+id/buttonShowResult"
            android:layout_marginBottom="32dp"
            android:layout_alignLeft="@+id/buttonShowResult"
            android:layout_alignStart="@+id/buttonShowResult"
            android:layout_alignRight="@+id/buttonShowResult"
            android:layout_alignEnd="@+id/buttonShowResult" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW RESULT"
            android:id="@+id/buttonShowResult"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>
